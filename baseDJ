rednet.open("left")
state = 1

local function printtitle()
	term.setTextScale(1.5)
	term.setCursorPos(1,2)
	term.setTextColor(colors.orange)
	term.write("E Erste Million")
	term.setCursorPos(1,2)
	term.write("R Bayrisch Drip")
	term.setCursorPos(1,3)
	term.write("T Ich ess Fleisch")
	term.setCursorPos(1,4)
	term.write("I want it that Way")
	term.setCursorPos(1,5)
	term.write("O Layla")
	term.setCursorPos(1,6)
	term.write("P Heat Waves")
	term.setCursorPos(1,7)
	write("More comming soon!")
end

local function complete()
	term.clear()
	term.setCursorPos(20,9.5)
	write(Sending Information to speakers)
	sleep(1)
	printtitle()
end

printtitle()


while true do
	local event, character = os.pullEvent("char")

	if character == "e" then
		complete()
		rednet.broadcast("music_disc.cat")
	end
	if character == "r" then
		complete()
		rednet.broadcast("music_disc.13")
	end
	if character == "t" then
		complete()
		rednet.broadcast("music_disc.otherside")
	end
	if character == "i" then
		complete()
		rednet.broadcast("music_disc.ward")
	end
	if character == "o" then
		complete()
		rednet.broadcast("music_disc.mellohi")
	end
	if character == "p" then
		complete()
		rednet.broadcast("music_disc.blocks")
	end
	end
